<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIm.Views.MenuPage"
             BackgroundColor="White"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Menu">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Horizontal">
                <ListView BindingContext="{Binding IsRefressing}">
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Inteligencia de Aduana</x:String>
                            <x:String>Inteligencia Empresa</x:String>
                            <x:String>Top Importaciones</x:String>
                            <x:String>Top Exportaciones</x:String>
                            <x:String>Oportunidades</x:String>
                            <x:String>Licitaciones</x:String>
                        </x:Array>
                    </ListView.ItemsSource>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>