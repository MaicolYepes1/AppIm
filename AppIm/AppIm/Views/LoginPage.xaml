<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIm.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <ScrollView 
            BindingContext="{Binding Login}">
            <StackLayout Padding="5">
                <Label Margin="0,20" 
                       Text="Bienvenidos IM Aplication" 
                       TextColor="#5A9EB3"
                       HorizontalOptions="CenterAndExpand" 
                       FontSize="Large"
                       FontAttributes="Bold"></Label>
                <Image Source="Logo" WidthRequest="200">
                </Image>
                <Grid Margin="10,0" VerticalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label VerticalOptions="Center" 
                           Text="Usuario :"
                           Grid.Row="0" 
                           Grid.Column="0"
                           TextColor="#5A9EB3"></Label>
                    <Entry Placeholder="Usuario"
                            TextColor="#5A9EB3"
                           Grid.Row="0" 
                           Grid.Column="1"
                           Text="{Binding Usuario, Mode=TwoWay}"></Entry>
                    <Label VerticalOptions="Center" 
                           Text="Contraseña :" 
                            TextColor="#5A9EB3"
                           Grid.Row="1" 
                           Grid.Column="0" ></Label>
                    <Entry IsPassword="True" 
                           Placeholder="Contraseña"
                           Grid.Row="1"
                            TextColor="#5A9EB3"
                           Grid.Column="1"
                           Text="{Binding Contraseña, Mode=TwoWay}"></Entry>
                </Grid>

                <StackLayout Margin="10,0"
                             Orientation="Horizontal">
                    <Label VerticalOptions="CenterAndExpand"
                            TextColor="#5A9EB3"
                        Text="Recordarme en enté dispositivo :"
                        HorizontalOptions="StartAndExpand"></Label>
                    <Switch IsToggled="{Binding IsRemembered, Mode=TwoWay}"
                            HorizontalOptions="End"></Switch>
                </StackLayout>
                <Label Text="Olvidó su contraseña?" TextColor="Blue"></Label>
                <ActivityIndicator VerticalOptions="FillAndExpand" 
                                   IsRunning="{Binding IsRunning, Mode=TwoWay}">
                </ActivityIndicator>
                <Button VerticalOptions="CenterAndExpand"
                        Margin="100,0" 
                        Text="Ingresar" 
                        TextColor="#5A9EB3" 
                        BorderRadius="23" 
                        BackgroundColor="#E8F5FD" 
                        HeightRequest="46"
                        Command="{Binding LoginCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
