<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infra="clr-namespace:AppIm.Infrastructure" 
             x:Class="AppIm.App">

    <Application.Resources>
        <!-- Diccionario de recursos de la aplicación-->
        <ResourceDictionary>
            <!-- Locator -->
            <infra:InstanceLocator x:Key="Locator"/>
            <!-- Colores -->
            <Color x:Key="MainColor">#7AC3CF</Color>
            <Color x:Key="FontColor">#126E6D</Color>
            <Color x:Key="AccentColor2">#7AB7CF</Color>
            <Color x:Key="AccentColor1">#879EB0</Color>
            <Color x:Key="BackgroundColor">#DEECFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>